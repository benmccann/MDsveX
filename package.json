{
	"name": "mdsvex-monorepo",
	"scripts": {
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"test": "pnpm -r --filter=!site test",
		"test:filter": "uvu -r ts-node/register",
		"release": "pnpm -r build && changeset publish",
		"changeset:add": "changeset add",
		"changeset:version": "changeset version && pnpm i --lockfile-only",
		"site:dev": "pnpm --filter @mdsvex/site dev",
		"site:build": "pnpm --filter @mdsvex/site build"
	},
	"author": "pngwn <hello@pngwn.io>",
	"license": "MIT",
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.0",
		"@changesets/cli": "^2.16.0",
		"@rollup/plugin-typescript": "^8.2.1",
		"@types/node": "^14.14.44",
		"esm": "^3.2.25",
		"prettier": "^2.2.1",
		"rollup": "^2.77.4-1",
		"rollup-plugin-dts": "^3.0.1",
		"ts-node": "^9.1.1",
		"tsm": "^2.3.0",
		"typescript": "^4.2.4",
		"uvu": "^0.5.6",
		"watchlist": "^0.2.3"
	},
	"dependencies": {
		"tslib": "^2.3.1"
	},
	"engines": {
		"pnpm": "^9.1.0"
	}
}
